server:
  port: 8080

spring:
  application:
    name: GATEWAY
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
          lower-case-service-id: true
      routes:
        - id: BLOG
          uri: lb://BLOG
          predicates:
            - Path=/blog/**
      default-filters:
        # Consider removing these and relying on the CORS configuration below.
        #- DedupeResponseHeader=Access-Control-Allow-Origin
        #- DedupeResponseHeader=Access-Control-Allow-Methods
        #- DedupeResponseHeader=Access-Control-Allow-Headers
    webflux:
      cors:
        mappings:
          "[/**]":
            allowedOrigins: "*" # Restrict this in production
            allowedMethods: "*" # Restrict this in production
            allowedHeaders: "*"
            allowCredentials: true #If you are using credentials.
    output:
      ansi:
        enabled: always

eureka:
  client:
    serviceUrl:
      defaultZone: http://localhost:8761/eureka
  instance:
    #hostname: localhost # Remove or set to the actual hostname if needed.
    prefer-ip-address: true # Use the IP address for registration

logging:
  level:
    org.springframework.cloud.gateway: TRACE
    reactor.netty: DEBUG